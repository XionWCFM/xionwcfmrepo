{
  "$schema": "https://unpkg.com/knip@5/schema.json",
  "workspaces": {
    "apps/blog": {
      "entry": ["apps/blog/src/**/*.{ts,tsx}", "apps/blog/app/**/*.{ts,tsx}"],
      "paths": {
        "~/entities/*": ["./src/entities/*"],
        "~/page/*": ["./src/page/*"],
        "~/features/*": ["./src/features/*"],
        "~/widgets/*": ["./src/widgets/*"],
        "~/shared/*": ["./src/shared/*"],
        "~/apps/*": ["./src/apps/*"],
        "@repo/*": ["../../packages/*"]
      }
    }
  }
}
